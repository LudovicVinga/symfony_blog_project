{% extends 'themes/base_admin.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block description %}Accéder a la liste des catégories{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Liste des catégories</h1>

    {% include 'components/alert.html.twig' %}

    <div class="d-flex justify-content-end align-items-center">
        <a href="{{ path('app_admin_category_create') }}" class="btn btn-dark shadow"><i class="fa fa-plus" aria-hidden="true"></i>Nouvelle catégorie</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover mt-5 table-dark">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Slug</th>
                    <th>Crée le</th>
                    <th>Modifié le</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.name }}</td>
                        <td>{{ category.slug }}</td>
                        <td>{{ category.createdAt|date() }}</td>
                        <td>{{ category.updatedAt|date() }}</td>
                        <td>
                            <a href="{{ path('app_admin_category_edit', {'id':category.id}) }}" class="btn btn-sm btn-secondary">Modifier</a>
                            <form action="{{ path('app_admin_category_delete', {'id':category.id}) }}" method="POST" class="d-inline">
                                <input type="hidden" name="csrf_token" value="{{ csrf_token('delete_category_'~category.id) }}">
                                <input type="submit" value="Supprimer" class="btn btn-sm btn-danger" onclick="return confirm('Confirmer la suppression?')">
                            </form>
                        </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}