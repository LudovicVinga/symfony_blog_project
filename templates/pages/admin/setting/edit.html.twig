{% extends 'themes/base_admin.html.twig' %}

{% block title %}Modification des paramètres{% endblock %}

{% block description %}Page de modification des paramètres{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Modifier les paramètres</h1>

    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto p-4 shadow">
                {{ form_start(form) }}
                    <div class="mb-3">
                        <label for="admin_setting_form_email">Email</label>
                        <div class="text-danger"> {{ form_errors(form.email) }} </div>
                        {{ form_widget(form.email, {'attr': {'class':'form-control','autofocus':'autofocus'}}) }}
                    </div>
                    <div class="mb-3">
                        <label for="admin_setting_form_phone">Téléphone</label>
                        <div class="text-danger"> {{ form_errors(form.phone) }} </div>
                        {{ form_widget(form.phone, {'attr': {'class':'form-control'}}) }}
                    </div>
                    <div>
                        <input formnovalidate type="submit" class="btn btn-dark w-100" value="Modifier">
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}