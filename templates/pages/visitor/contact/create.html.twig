{% extends 'themes/base_visitor.html.twig' %}

{% block title %}Contactez-moi{% endblock %}

{% block description %}Page de prise de contact du projet blog en Symfony 7 | dwwm20{% endblock %}

{% block keywords %}Blog, contact, email, formulaire, numéro de téléphone{% endblock %}

{% block main %}
    <h1 class="text-center my-5 display-5 fw-bold">Contactez-moi</h1>

    {% include 'components/alert.html.twig' %}

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                {{ form_start(form) }}
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label for="visitor_contact_form_firstName">Prénom <span class="text-danger">*</span></label>
                            <div class="text-danger"> {{ form_errors(form.firstName) }} </div>
                            {{ form_widget(form.firstName, {'attr' : {'class':'form-control','autofocus':'autofocus'}}) }}
                        </div>
                        <div class="col-md-6">
                            <label for="visitor_contact_form_lastName">Nom <span class="text-danger">*</span></label>
                            <div class="text-danger"> {{ form_errors(form.lastName) }} </div>
                            {{ form_widget(form.lastName, {'attr' : {'class':'form-control'}}) }}
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label for="visitor_contact_form_email">Email <span class="text-danger">*</span></label>
                            <div class="text-danger"> {{ form_errors(form.email) }} </div>
                            {{ form_widget(form.email, {'attr' : {'class':'form-control'}}) }}
                        </div>
                        <div class="col-md-6">
                            <label for="visitor_contact_form_phone">Numéro de téléphone</label>
                            <div class="text-danger"> {{ form_errors(form.phone) }} </div>
                            {{ form_widget(form.phone, {'attr' : {'class':'form-control'}}) }}
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-12">
                            <label for="visitor_contact_form_message">Message <span class="text-danger">*</span></label>
                            <div class="text-danger"> {{ form_errors(form.message) }} </div>
                            {{ form_widget(form.message, {'attr' : {'class':'form-control', 'rows':4}}) }}
                        </div>
                    </div>

                    <div>
                        <input formnovalidate type="submit" class="btn btn-secondary w-100">
                    </div>
                {{ form_end(form) }}
            </div>
            <div class="col-md-6 d-flex flex-column justifiy-content-center align-items-center ">
                <p>
                    <strong>Email</strong>: {{ setting.email }}
                </p>
                <p>
                    <strong>Téléphone</strong>: {{ setting.phone }}
                </p>
                <div>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m23!1m12!1m3!1d84028.1927947968!2d2.170650006704062!3d48.841408039736564!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!4m8!3e6!4m0!4m5!1s0x47e67ac09948a18d%3A0xdd2450406cef2c5c!2s24%20Rue%20du%20Commandant%20Guilbaud%2C%2075016%20Paris!3m2!1d48.8414374!2d2.2530504!5e0!3m2!1sfr!2sfr!4v1747225196312!5m2!1sfr!2sfr" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
{% endblock %}