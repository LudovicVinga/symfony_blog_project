{% extends 'themes/register_visitor.html.twig' %}

{% block description %}La page de connexion du blog medecine du monde{% endblock %}
{% block title %}Connexion{% endblock %}
{% block keywords %}Connexion, utilisateur, blog, medecine{% endblock %}

{% block main %}

    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <img class="img-fluid" src="/images/static/login/login.png" alt="Un alien au dessus de la Terre.">
            </div>

            <div class="col-lg-5">
                <h1 class="fw-bold mb-3">Connexion</h1>

                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <div class="mb-3">
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    </div>

                    <div class="mb-3">
                        <label for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    </div>

                    <div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    </div>

                    <div class="mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Se souvenir de moi
                        </label>
                    </div>

                    <div>
                        <button formnoValidate class="btn btn-secondary w-100" type="submit">Connexion</button>
                    </div>
                </form>

                <div class="mt-3 text-center">
                    <p>Vous n'avez pas encore de compte ? <a href="{{ path('app_register') }}">Inscrivez-vous</a></p>
                </div>

            </div>
        </div>
    </div>

{% endblock %}













