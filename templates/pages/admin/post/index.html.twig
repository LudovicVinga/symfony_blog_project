{% extends 'themes/base_admin.html.twig' %}

{% block title %}Liste des articles du blog{% endblock %}

{% block description %}Accéder a la liste des articles du blog{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Liste des articles</h1>

    <div class="d-flex justify-content-end align-items-center my-3">
        <a href="{{ path('app_admin_post_create') }}" class="btn btn-dark shadow my-3"> <i class="fa-solid fa-plus"></i> Nouvel article</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-dark">
            <thead class="text-center">
                <tr>
                    <th>Image</th>
                    <th>Titre</th>
                    <th>Catégorie</th>
                    <th>Tags</th>
                    <th>Publié?</th>
                    <th>Consulter</th>
                    <th>Créé le</th>
                    <th>Modifié le</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {% for post in posts %}
                    <tr class="text-center">
                        <td>
                            {% if post.image %}
                            <img src="{{ vich_uploader_asset(post, 'imageFile') | imagine_filter('post_image_thumb') }}" alt="{{ post.title }}">
                            {% endif %}
                        </td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}