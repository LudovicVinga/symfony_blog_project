{% extends 'themes/base_admin.html.twig' %}

{% block title %}Liste des tags{% endblock %}

{% block description %}Accéder a la liste des tags{% endblock %}

{% block jQuery %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

{% block dataTables %}
    <link href="https://cdn.datatables.net/v/bs5/dt-2.3.0/datatables.min.css" rel="stylesheet" integrity="sha384-hGoHjV7OyUWri8NopwGqlstj4hDVsperCk9BPyX+MZb56/Mj81CK4htI0G24m4Es" crossorigin="anonymous">
 
    <script src="https://cdn.datatables.net/v/bs5/dt-2.3.0/datatables.min.js" integrity="sha384-7zOvA9ql/NaRs8q4iOxQ0LgXDU0uArnHO2L6o2QMHIDuvnbmWsxr5axjvByjDsRF" crossorigin="anonymous"></script>

    <script>
        $(document).ready( function () {
        $('#myTable').DataTable({
            language: {
                url: 'https://cdn.datatables.net/plug-ins/2.3.0/i18n/fr-FR.json',
            }
        });
        } );
    </script>
{% endblock %}

{% block main %}
    <h1 class="text-center display-5 my-3">Liste des tags</h1>

    {% include 'components/alert.html.twig' %}

    <div class="d-flex justify-content-end align-items-center my-5">
        <a href="{{ path('app_admin_tag_create') }}" class="btn btn-dark shadow"> <i class="fa fa-plus" aria-hidden="true"></i> Nouveau tag</a>
    </div>

    <div class="table-responsive">
        <table id="myTable" class="table table-striped table-bordered table-hover table-dark">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Slug</th>
                    <th>Crée le</th>
                    <th>Modifié le</th>
                    <th>Options
                </tr>
            </thead>
            <tbody>
                {% for tag in tags %}
                    <tr>
                        <td>{{ tag.name }}</td>
                        <td>{{ tag.slug }}</td>
                        <td>{{ tag.createdAt|date() }}</td>
                        <td>{{ tag.updatedAt|date() }}</td>
                        <td>
                            <a href="{{ path('app_admin_tag_edit', {'id':tag.id}) }}" class="btn btn-sm btn-secondary">Modifier</a>
                            <form action="{{ path('app_admin_tag_delete', {'id':tag.id}) }}" method="POST" class="d-inline">
                                <input type="hidden" name="csrf_token" value="{{ csrf_token('delete_tag_'~tag.id) }}">
                                <input type="submit" value="Supprimer" class="btn btn-sm btn-danger" onclick="return confirm('Confirmer la suppression?')">
                            </form>
                        </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
{% endblock %}