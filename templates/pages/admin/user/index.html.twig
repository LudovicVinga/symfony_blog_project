{% extends 'themes/base_admin.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block description %}Gérer les utilisateurs{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Liste des utilisateurs</h1>

    {% include 'components/alert.html.twig' %}

    <div class="table-responsive">
        <table id="myTable" class="table table-striped table-bordered table-hover table-dark">
            <thead class="text-center">
                <tr>
                    <th>ID</th>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Rôles</th>
                    <th>Crée le</th>
                    <th>Modifié le</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody class="text-center">
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            {% for role in user.roles %}
                                <span class="badge text-bg-light">{{ role }}</span>
                            {% endfor %}
                        </td>
                        <td>{{ user.createdAt|date() }}</td>
                        <td>{{ user.updatedAt|date() }}</td>
                        <td>
                            {% if 'ROLE_SUPER_ADMIN' not in user.roles %}
                                <a href="{{ path('app_admin_user_edit', {'id':user.id}) }}" class="btn btn-sm btn-secondary m-1">Modifier le rôle</a>
                                <form action="{{ path('app_admin_user_delete', {'id':user.id}) }}" method="POST" class="d-inline">
                                    <input type="hidden" name="csrf_token" value="{{ csrf_token('delete_user_'~user.id) }}">
                                    <input type="submit" value="Supprimer" class="btn btn-sm btn-danger" onclick="return confirm('Confirmer la suppression?')">
                                </form>
                            {% endif %}
                        </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}