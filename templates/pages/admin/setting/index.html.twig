{% extends 'themes/base_admin.html.twig' %}

{% block title %}Paramètres{% endblock %}

{% block description %}Accéder aux paramètres du site{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Vos parametres</h1>

    {% include 'components/alert.html.twig' %}

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered text-center table-dark">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ setting.email }}</td>
                    <td>{{ setting.phone }}</td>
                    <td>
                        <a href="{{ path('app_admin_setting_edit', {'id':setting.id}) }}" class="btn btn-sm btn-secondary">Modifier</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}